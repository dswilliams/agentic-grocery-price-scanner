# Database Configuration
DB_PATH=db/grocery_scanner.db
DB_CREATE_TABLES=true

# Vector Database (Qdrant) Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=products
QDRANT_EMBEDDING_MODEL=all-MiniLM-L6-v2

# Language Model Configuration
LLM_OLLAMA_BASE_URL=http://localhost:11434
LLM_DEFAULT_MODEL=llama2
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1000

# Scraping Configuration
SCRAPING_USER_AGENT="Mozilla/5.0 (compatible; GroceryScanner/1.0)"
SCRAPING_DEFAULT_TIMEOUT=30
SCRAPING_DEFAULT_RATE_LIMIT=1.0
SCRAPING_MAX_RETRIES=3
SCRAPING_USE_SELENIUM=false
SCRAPING_HEADLESS_BROWSER=true

# Application Settings
APP_NAME="Agentic Grocery Price Scanner"
DEBUG=false
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
CONFIG_FILE=config/stores.yaml

# Optional API Keys (if needed for enhanced features)
# OPENAI_API_KEY=your_openai_key_here
# ANTHROPIC_API_KEY=your_anthropic_key_here